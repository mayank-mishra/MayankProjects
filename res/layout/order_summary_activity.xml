<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="40dp"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:background="@color/primary_color_two"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dp"
                android:background="@color/primary_color_two"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginRight="100dp"
                android:padding="10dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="Selected Distributor"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_distributername"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Select Distributor"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <AutoCompleteTextView
                    android:id="@+id/txt_autocomplete"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>
            
            <TextView
                android:id="@+id/txt_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|bottom"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="Rs 100.00"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="24dp" />
        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="#B3B3B3" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:background="@color/white"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="Selected Product"
                android:textColor="@color/primary_color_two"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#B3B3B3" />

            <ListView
                android:id="@+id/list_product"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:visibility="visible" >

        <Button
            android:id="@+id/btn_done"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#8D2990"
            android:gravity="center"
            android:text="Done"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>

</FrameLayout>