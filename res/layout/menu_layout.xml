<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menusliderlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/navigation_profile_lay"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@color/primary_color_two"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle_shape_white" >

                    <com.demo.utils.RoundedImageView
                        android:id="@+id/img_user_pic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/panda" >
                    </com.demo.utils.RoundedImageView>

                    <FrameLayout
                        android:id="@+id/frame_round_color"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:background="@drawable/circle_shape_white"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/txt_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:inputType="textCapCharacters|textCapWords"
                            android:text=""
                            android:textColor="@color/colorPrimary"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:background="@color/transparent_black" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="First Name"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:text="example@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/header_stroke"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="#F5F5F5" />

            <FrameLayout
                android:id="@+id/lay_home"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_distributers"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="Home"
                    android:textColor="@color/menu_ash_color"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/line_home"
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:background="@color/primary_color_two"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="#F5F5F5" />

            <FrameLayout
                android:id="@+id/lay_products"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_product"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="Products"
                    android:textColor="@color/menu_ash_color"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/line_products"
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:background="@color/primary_color_two"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="#F5F5F5" />

            <FrameLayout
                android:id="@+id/lay_distributers"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_distributers"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="Distributors"
                    android:textColor="@color/menu_ash_color"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/line_distributers"
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:background="@color/primary_color_two"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="#F5F5F5"
                android:visibility="visible" />

            <FrameLayout
                android:id="@+id/lay_orders"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_orders"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="Orders"
                    android:textColor="@color/menu_ash_color"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/line_orders"
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:background="@color/primary_color_two"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="#F5F5F5"
                android:visibility="visible" />

            <FrameLayout
                android:id="@+id/lay_invoices"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_invoice"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="Invoices"
                    android:textColor="@color/menu_ash_color"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/line_invoices"
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:background="@color/primary_color_two"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>